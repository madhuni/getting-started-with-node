{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs", // module code generation method
    "esModuleInterop": true,
    "target": "es6", // output language level
    "moduleResolution": "node", // for mimicing the Node resolution mechanicsm
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "dist", // directory for all the compiled JS
    "removeComments": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./src/public/"],
  "lib": ["es2015"],
  "paths": {
    "@app/*": ["./src/*"],
    "@project-root/*": ["./*"]
  }
}